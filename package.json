{
  "name": "@sergdudko/stripe-js",
  "version": "2.0.9",
  "description": "Supercharge Your Stripe Integration with Enhanced Methods for stripe-js: Take Full Control of Customer Card Management Right from Your Frontend! Elevate Your Payment Processing Capabilities with Ease and Efficiency.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/esm.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/esm.d.ts",
        "default": "./dist/esm/esm.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist/esm/**/*.js",
    "dist/cjs/**/*.js",
    "dist/types/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/**/*.ts",
    "prebuild": "npm run lint && rm -rf dist",
    "build:cjs": "./node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:esm": "./node_modules/.bin/tsc -p tsconfig.esm.json",
    "postbuild:cjs": "echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
    "postbuild:esm": "echo '{\"type\":\"module\"}' > ./dist/esm/package.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "./node_modules/.bin/nyc node --test --import tsx ./test/*.test.ts",
    "test:local": "./node_modules/.bin/nyc node --env-file=.env.local --test --import tsx ./test/*.test.ts",
    "update": "eval \"$(node -e 'const t = require(`./package.json`);const ignore = require(`./ignoreUpdatesModules.json`);console.log(`npm i ${(Object.keys(t.dependencies||{}).filter((e)=>ignore.base.indexOf(e) === -1).map((e)=>(`${e}@latest`)).join(` `))} --save&&npm i ${(Object.keys(t.devDependencies||{}).filter((e)=>ignore.dev.indexOf(e) === -1).map((e)=>(`${e}@latest`)).join(` `))} --save-dev`);')\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siarheidudko/stripe-js.git"
  },
  "keywords": [
    "stripe",
    "js",
    "stripe-js",
    "customer",
    "card",
    "payment_intent",
    "source",
    "payment_method"
  ],
  "author": {
    "name": "Siarhei Dudko",
    "email": "siarhei@dudko.dev",
    "url": "https://dudko.dev"
  },
  "contributors": [
    {
      "name": "Vadim Nesterovich",
      "email": "vad9ss6@gmail.com",
      "url": "https://www.linkedin.com/in/vadim-nesterovich-5050961a3"
    }
  ],
  "funding": [
    {
      "type": "individual",
      "url": "http://dudko.dev/donate"
    },
    {
      "type": "buymeacoffee",
      "url": "https://www.buymeacoffee.com/dudko.dev"
    },
    {
      "type": "paypal",
      "url": "https://paypal.me/dudkodev"
    },
    {
      "type": "patreon",
      "url": "https://patreon.com/dudko_dev"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siarheidudko/stripe-js/issues"
  },
  "homepage": "https://github.com/siarheidudko/stripe-js#readme",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "jsdom": "^27.0.0",
    "jsdom-global": "^3.0.2",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "stripe": "^19.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "@stripe/stripe-js": "^8.1.0"
  }
}
